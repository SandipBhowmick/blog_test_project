<div class="container">
	<div class="row justify-content-md-left">
		<div class="col-md-4"><h2>Title</h2></div>
		<div class="col-md-6"><%= @post.title %></div>
	</div>

	<div class="row justify-content-md-left">
		<div class="col-md-4"><strong>Body</strong></div>
		<div class="col-md-6"><%=@post.body %></div>
	</div>

	<div class="row justify-content-md-left">
		<div class="col-md-4"><strong>Image</strong></div>
		<div class="col-md-6"><%= image_tag attachment_url(@post, :image, :fill, 100, 100, format: "jpg") %></div>
	</div>

	<div class="row justify-content-md-left">
		<div class="col-md-4"><strong>Post Type</strong></div>
		<div class="col-md-6"><% if @parent_category %><%= @parent_category.name %> -><% end %>  <% if @category %><%= @category.name %><% end %></div>
	</div>

	<div class="row justify-content-md-left">
		<div class="col-md-4"><strong>Post by</strong></div>
		<div class="col-md-6"><%=@post.user.email %></div>
	</div>

	<div class="row justify-content-md-left">
		<div class="col-md-4"><strong>Post at</strong></div>
		<div class="col-md-6"><%=time_ago_in_words(@post.created_at) %> ago</div>
	</div>

	<div>
		<h2><%= @post.comments.count %> Comments </h2>
		<%= render @post.comments %>
		<h3>Add a comment: </h3>
		<%= render "comments/form" %>
	</div>
	
</div>