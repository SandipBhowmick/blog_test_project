	}




	function data_from_state() {
		$.ajax({          
		type: "get",
		url: "<%= get_states_path %>",
		
		data: {"id" : $(user_country_id).val()},
			success: function(r){
				
				if(r.res.length)
				{
					
					$("#user_state_id").empty();
