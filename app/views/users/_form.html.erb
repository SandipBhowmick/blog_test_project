<div class="container">
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:first_name, "First Name")%></div>
		<div class="col-8 col-md-4"><%= f.text_field(:first_name, placeholder: "Enter Your First Name") %></div>		
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:last_name, "Last Name")%></div>
		<div class="col-8 col-md-4"><%= f.text_field(:last_name, placeholder: "Enter Your Last Name") %></div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:profile_image, "Selece your profile image")%> Old miage : </div>
		<div class="col-4 col-md-4"><% if @user.profile_image_id? %><%= image_tag attachment_url(@user, :profile_image, :fill, 95, 95, format: "jpg") %> <% end %><%= f.attachment_field :profile_image %></div>
		<div class="col-4 col-md-4"></div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:gender, "Select Gender")%></div>
		<div class="col col-md-4"><%= f.radio_button :gender, 'm' %> M <%= f.radio_button :gender, 'f' %> F</div>
	</div>

	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:country_id, "Country")%></div>
		<div class="col col-md-4"><%= f.select(:country_id,Country.all.order('country_name ASC').collect {|p| [ p.country_name, p.id ] }, { include_blank: false, :include_blank => 'Select country'}) %></div>
	</div>
	<div class="row justify-content-md-left">	
		<div class="col col-md-4"><%=f.label(:state_id, "State")%></div>
		<div class="col col-md-4"><%= f.select(:state_id,options_for_select([]),:prompt => 'Select One') %> </div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:interest, "Interest")%> </div>
		<div class="col col-md-4"><% User::GET_INTEREST.each do |a_value| %>
				<%= f.check_box(:interest, { :multiple => true }, a_value[1]) %><label for="user_interest_<%= a_value[1] %>"><%= a_value[0]%></label>				
		<% end %>
		</div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:address, "address")%></div>
		<div class="col col-md-4"><%= f.text_area(:address, placeholder: "Enter Your address") %></div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:email, "e-mail id")%></div>
		<div class="col col-md-4"><%= f.text_field(:email, placeholder: "Enter Your email id") %></div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:password, "Password")%></div>
		<div class="col col-md-4"><%= f.password_field(:password, placeholder: "Enter Your Password") %></div>
	</div>
	<div class="row justify-content-md-left">
		<div class="col col-md-4"><%=f.label(:password, "Password Confirmation")%></div>
		<div class="col col-md-4"><%= f.password_field(:password_confirmation, placeholder: "Re-enter Your Password") %></div>
	</div>
</div>	

