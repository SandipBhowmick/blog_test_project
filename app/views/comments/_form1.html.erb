
	<%= form_for(@comment, :url => {:action => 'update', :id => @comment.id},:method => "patch") do |f| %>
		<%= f.label :name %><br>
		<%= f.text_field :name %><br>
		<br>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
		<br>		
		<%= f.attachment_field :image %>
		<% if !flash[:image].blank? %>
		<div class="notice"><%= flash[:image] %></div>
  		<% end %>
  		<% if alert %>
  		<p class="alert alert-danger"><%= alert %></p>
		<% end %>
		<br>
		<%= f.submit %>
	<% end %>
